{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@finastra/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@finastra/cdk/asset-card": ["libs/cdk/asset-card/src/index.ts"],
      "@finastra/cdk/asset-list": ["libs/cdk/asset-list/src/index.ts"],
      "@finastra/cdk/balance-card": ["libs/cdk/balance-card/src/index.ts"],
      "@finastra/cdk/transactions-table": ["libs/cdk/transactions-table/src/index.ts"],
      "@finastra/cdk/trending-list": ["libs/cdk/trending-list/src/index.ts"],
      "@finastra/cdk/watchlist": ["libs/cdk/watchlist/src/index.ts"],
      "@finastra/core": ["libs/core/src/index.ts"],
      "@finastra/features/home": ["libs/features/home/src/index.ts"],
      "@finastra/features/portfolio": ["libs/features/portfolio/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
